<p style="color: green"><%= notice %></p>

<h1>Users</h1>

<ul id="users" class="user-list">
  <% @users.each do |user| %>
    <li class="user-list-item">
      <%= link_to user do %>
        <span class="user-avatar-thumb"><%= image_tag user.avatar.attached? ? user.avatar.variant(:thumb) : empty_gif %></span>
        <span><%= user.name %></span>
      <% end %>
    </li>
  <% end %>
</ul>

<%= link_to "New user", new_user_path %>
